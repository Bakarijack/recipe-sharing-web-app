{
  "devDependencies": {
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0"
  },
  "scripts": {
    "lint:js": "eslint \"static/js/**/*.js\"",
    "lint:css": "stylelint \"static/css/**/*.css\"",
    "format:js": "prettier --write \"static/js/**/*.js\"",
    "format:css": "prettier --write \"static/css/**/*.css\" --config ./.prettierrc",
    "format:all": "prettier --write \"static/**/**/*.{css,js}\" --config ./.prettierrc"
  }
}
